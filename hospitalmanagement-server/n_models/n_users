const mongoose = require("mongoose");

const userSchema = new mongoose.Schema({
  userName: {
    type: String,
    required: true,
  },

  email: {
    type: String,
    required: true,
  },

  phone: {
    type: Number,
    required: true,
  },

  password: {
    type: String,
    required: true,
  },

  dob: {
    type: String,
    required: true,
  },

  status: {
    type: String,
    required: false,
  },
});

//exporting the module
module.exports = mongoose.model("Users", userSchema);
